<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Account</title>
    <link href="/css/tailwind.css" rel="stylesheet" />
  </head>
  <body
    class="bg-gray-100 text-gray-800 font-sans flex justify-center items-center min-h-screen"
  >
    <div class="w-full max-w-sm p-6 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold text-center text-red-800 mb-6">
        Create Account
      </h1>
      <form action="/register" method="POST">
        <div class="mb-4">
          <label for="name" class="block text-sm font-medium">Username</label>
          <input
            type="text"
            id="name"
            name="name"
            class="mt-1 p-2 border rounded w-full"
            required
          />
        </div>

        <div class="mb-4">
          <label for="password" class="block text-sm font-medium"
            >Password</label
          >
          <input
            type="password"
            id="password"
            name="password"
            class="mt-1 p-2 border rounded w-full"
            required
          />
        </div>

        <div class="mb-6">
          <label for="confirm" class="block text-sm font-medium"
            >Confirm Password</label
          >
          <input
            type="password"
            id="confirm"
            name="confirm"
            class="mt-1 p-2 border rounded w-full"
            required
          />
        </div>

        <button
          type="submit"
          class="bg-red-800 text-white px-6 py-3 rounded hover:bg-red-600 w-full"
        >
          Create Account
        </button>
      </form>
    </div>
  </body>
</html>
